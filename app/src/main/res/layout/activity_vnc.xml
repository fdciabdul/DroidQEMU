<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/vnc_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:contentDescription="VNC Display" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Connecting..."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Floating toolbar for keyboard and mouse controls -->
    <LinearLayout
        android:id="@+id/control_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:background="@drawable/toolbar_background"
        android:padding="8dp"
        android:elevation="8dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btn_keyboard"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle Keyboard"
            android:padding="8dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="8dp"
            android:background="#40FFFFFF" />

        <ImageButton
            android:id="@+id/btn_left_click"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_mylocation"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Left Click"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/btn_right_click"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Right Click"
            android:padding="8dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="8dp"
            android:background="#40FFFFFF" />

        <ImageButton
            android:id="@+id/btn_ctrl"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Ctrl Key"
            android:padding="8dp"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:id="@+id/btn_alt"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Alt Key"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/btn_esc"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Escape Key"
            android:padding="8dp" />

    </LinearLayout>

</FrameLayout>
