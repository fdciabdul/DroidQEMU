<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <!-- VNC Display Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/vnc_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:contentDescription="VNC Display" />

        <!-- Connection status overlay -->
        <LinearLayout
            android:id="@+id/connection_overlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminate="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Connecting..."
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Control toolbar above keyboard -->
    <LinearLayout
        android:id="@+id/control_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1a1a2e"
        android:padding="8dp"
        android:gravity="center"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btn_keyboard"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle Keyboard"
            android:padding="8dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="12dp"
            android:background="#40FFFFFF" />

        <ImageButton
            android:id="@+id/btn_left_click"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_mylocation"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Left Click"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/btn_middle_click"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_compass"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Middle Click"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/btn_right_click"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Right Click"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Virtual Keyboard Container -->
    <FrameLayout
        android:id="@+id/keyboard_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>
